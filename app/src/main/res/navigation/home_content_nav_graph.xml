<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:id="@+id/home_content_nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="pro.filemanager.HomeFragment"
        android:label="@string/title_multimedia">

        <action
            android:id="@+id/action_homeFragment_to_fileBrowserFragment"
            app:destination="@id/fileBrowserFragment"
            app:enterAnim="@anim/fragment_open_enter"
            app:exitAnim="@anim/fragment_fade_exit"
            app:popEnterAnim="@anim/fragment_fade_enter"
            app:popExitAnim="@anim/fragment_open_exit" />
        <action
            android:id="@+id/action_homeFragment_to_imageLibraryFragment"
            app:destination="@id/imageLibraryFragment"
            app:enterAnim="@anim/fragment_open_enter"
            app:exitAnim="@anim/fragment_close_exit"
            app:popEnterAnim="@anim/fragment_fade_enter"
            app:popExitAnim="@anim/fragment_fade_exit" />
    </fragment>
    <fragment
        android:id="@+id/fileBrowserFragment"
        android:name="pro.filemanager.files.FileBrowserFragment">
        <action
            android:id="@+id/action_fileBrowserFragment_self"
            app:destination="@id/fileBrowserFragment"
            app:enterAnim="@anim/fragment_open_enter"
            app:exitAnim="@anim/fragment_fade_exit"
            app:popEnterAnim="@anim/fragment_fade_enter"
            app:popExitAnim="@anim/fragment_open_exit" />
        <argument
            android:name="path"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/imageLibraryFragment"
        android:name="pro.filemanager.images.ImageLibraryFragment"
        android:label="ImageLibraryFragment">
        <action
            android:id="@+id/action_imageLibraryFragment_to_imageFoldersFragment"
            app:destination="@id/imageFoldersFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:launchSingleTop="true"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
        <argument
            android:name="ImageFolder"
            app:argType="pro.filemanager.images.folders.ImageFolderItem" />
    </fragment>
    <fragment
        android:id="@+id/imageFoldersFragment"
        android:name="pro.filemanager.images.folders.ImageFoldersFragment"
        android:label="ImageFoldersFragment">
        <action
            android:id="@+id/action_imageFoldersFragment_to_imageLibraryFragment"
            app:destination="@id/imageLibraryFragment"
            app:enterAnim="@anim/fragment_open_enter"
            app:exitAnim="@anim/fragment_close_exit"
            app:launchSingleTop="true"
            app:popEnterAnim="@anim/fragment_fade_enter"
            app:popExitAnim="@anim/fragment_fade_exit" />
    </fragment>
</navigation>